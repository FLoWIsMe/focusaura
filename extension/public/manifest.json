{
  "manifest_version": 3,
  "name": "FocusAura",
  "description": "AI focus agent that senses distraction and brings you back into flow.",
  "version": "0.1.0",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "FocusAura - AI Focus Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "idle",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
